
*
  margin 0
  padding 0

body
  background var(--color-bg)
  color var(--color-text)
  font-size font-size-normal

::-webkit-scrollbar
  width 0

.type_container.type_gone
  display none


.tool_container
  height 100vh;
  width width-tool
  background var(--color-bg-tool)
  position fixed;
  top 0

.type_container
  border-right border-style
  width width-type
  height 100vh
  position fixed
  top 0
  left width-tool
  z-index 20


.list_container
  width width-list
  border-right border-style
  height 100vh
  position fixed
  top 0
  left width-type + width-tool
  z-index 10
  overflow auto

.list_container.type_gone
  left width-tool

.detail_container
  margin-left width-type + width-list + width-tool
.detail_container.type_gone
  margin-left width-list + width-tool



